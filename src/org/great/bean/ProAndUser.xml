<mapper namespace="org.great.mapper.ProAndUserMapper">
  <!-- 查询作品购买记录，包括评价 -->
		 
	<select id="findPayDetal"
	 resultType="org.great.bean.ProAndUserBean" 
	
	>
	
	 select * from PROANDUSER where PRODUCTIONID=#{proId}
	
	</select> 
		 
<update id="setProductionEvaluate"

>


UPDATE PROANDUSER SET PRODUCTIONEVALUATE = #{evaluate},point=#{point} WHERE PROANDUSERID = #{proAndUserId}

</update>
	 
</mapper>
